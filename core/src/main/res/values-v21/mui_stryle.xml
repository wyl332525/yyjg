<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MUIEditText">
        <item name="mui_option">none</item>
        <item name="mui_bg">have</item>
    </style>
    
    

    <style name="TextItem.Title1">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
         <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ImageBottom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="ImageBottom.Item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">center</item>
        <item name="android:background">@null</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:minWidth">36dp</item>
    </style>
    
    
    <style name="EditTextItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextIconItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="TextItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minHeight">@dimen/mui_actionBarSize</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextItem.Title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="LayoutItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:minHeight">@dimen/mui_actionBarSize</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="Point">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:text">*</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:padding">10dp</item>
    </style>
    
    
    <!--**********************************************
    *                  Dialog                        *
    **********************************************-->
    <style name="qmui_dialog_wrap">
        <item name="android:background">@drawable/qmui_dialog_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>
    
    
    <!--********************* Dialog *********************-->

    <style name="QMUI.Dialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item><!-- 不用window title，使用自己的layout来做title -->
        <item name="android:windowIsFloating">true</item><!-- 在中间弹框、背后有遮罩的效果 -->
        <item name="android:minWidth">280dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
    </style>
    
    <style name="QMUI.TipDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <!--********************* Loading *********************-->
    <style name="QMUILoading">
        <item name="qmui_loading_view_size">@dimen/qmui_loading_size</item>
        <item name="android:color">@color/qmui_loading_color</item>
    </style>
    
    <style name="qmui_tip_dialog_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/qmui_tip_dialog_min_width</item>
        <item name="android:minHeight">@dimen/qmui_tip_dialog_min_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/qmui_content_spacing_horizontal</item>
        <item name="android:layout_marginRight">@dimen/qmui_content_spacing_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/qmui_tip_dialog_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/qmui_tip_dialog_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/qmui_tip_dialog_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/qmui_tip_dialog_padding_vertical</item>
        <item name="android:background">@drawable/qmui_tip_dialog_bg</item>
    </style>
    
    
    
    
</resources>